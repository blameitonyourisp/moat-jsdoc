{
    "docdash": {
        "search": true,
        "typedefs": true,
        "collapse": true
    },
    "opts": {
        "destination": "./jsdoc/",
        "private": true,
        "recurse": true,
        "template": "node_modules/docdash",
        "sort": true
    },
    "plugins": [ 
        "plugins/markdown",
        "../../src"
    ],
    "markdown": {
        "tags": ["todo"],
        "hardwrap": true
    },
    "moat-jsdoc": {
        "ticket-store": "moat.json"
    },
    "recurseDepth": 10,
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}